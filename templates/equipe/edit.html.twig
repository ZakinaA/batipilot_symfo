{% extends 'base.html.twig' %}

{% block title %}Modifier l'équipe{% endblock %}

{% block body %}
<div class="container mt-5">

    <h1 class="mb-4">
        <i class="bi bi-people"></i> Modifier l'équipe
    </h1>

    {{ form_start(form, {'attr': {'class': 'poste-form'}}) }}

    <div class="poste-section_ClCh">
        <div class="poste-header">
            <h4 class="mb-0">
                <i class="bi bi-info-circle"></i> Informations de l'équipe
            </h4>
        </div>

        <div class="etapes-grid">

            {# Nom #}
            <div class="etape-field">
                {{ form_label(form.nom, null, {'label_attr': {'class': 'etape-label'}}) }}
                <div class="etape-input">
                    {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.nom) }}
                </div>
            </div>

            {# Description (si existant) #}
            {% if form.description is defined %}
            <div class="etape-field etape-field-full">
                {{ form_label(form.description, null, {'label_attr': {'class': 'etape-label'}}) }}
                <div class="etape-input">
                    {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.description) }}
                </div>
            </div>
            {% endif %}

        </div>
    </div>

    <div class="d-flex justify-content-between mt-4">
        <a href="{{ path('app_equipe_index') }}" class="btn btn-secondary btn-lg">
            <i class="bi bi-arrow-left"></i> Annuler
        </a>

        <button class="btn btn-primary btn-lg">
            <i class="bi bi-save"></i> Enregistrer les modifications
        </button>
    </div>

    {{ form_widget(form._token) }}
    {{ form_end(form, {'render_rest': false}) }}

</div>
{% endblock %}
