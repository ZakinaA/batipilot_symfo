{% extends 'base.html.twig' %}

{% block title %}Chantier - {{ chantier.ville }}{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Chantier : {{ chantier.ville }}</h1>
        <div>
            <a href="{{ path('app_chantier_edit', {'id': chantier.id}) }}" class="btn btn-warning">
                <i class="bi bi-pencil"></i> Modifier
            </a>
            <a href="{{ path('app_chantier_index') }}" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Retour à la liste
            </a>
        </div>
    </div>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    <div class="row">
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header bg-info text-white">
                    <h3 class="mb-0"><i class="bi bi-person-fill"></i> Informations Client</h3>
                </div>
                <div class="card-body">
                    {% if chantier.client %}
                        <table class="table table-borderless">
                            <tr>
                                <th width="40%">Nom :</th>
                                <td>{{ chantier.client.nom }}</td>
                            </tr>
                            <tr>
                                <th>Prénom :</th>
                                <td>{{ chantier.client.prenom ?? '-' }}</td>
                            </tr>
                            <tr>
                                <th>Téléphone :</th>
                                <td>{{ chantier.client.telephone ?? '-' }}</td>
                            </tr>
                            <tr>
                                <th>Email :</th>
                                <td>{{ chantier.client.mail ?? '-' }}</td>
                            </tr>
                        </table>
                    {% else %}
                        <p class="text-muted">Aucun client associé</p>
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0"><i class="bi bi-building"></i> Informations Chantier</h3>
                </div>
                <div class="card-body">
                    <table class="table table-borderless">
                        <tr>
                            <th width="50%">Adresse :</th>
                            <td>{{ chantier.adresse ?? '-' }}</td>
                        </tr>
                        <tr>
                            <th>Code Postal :</th>
                            <td>{{ chantier.copos ?? '-' }}</td>
                        </tr>
                        <tr>
                            <th>Ville :</th>
                            <td><strong>{{ chantier.ville }}</strong></td>
                        </tr>
                        <tr>
                            <th>Date Prévue :</th>
                            <td>{{ chantier.datePrevue ? chantier.datePrevue|date('d/m/Y') : '-' }}</td>
                        </tr>
                        <tr>
                            <th>Date de Démarrage :</th>
                            <td>{{ chantier.dateDemarrage ? chantier.dateDemarrage|date('d/m/Y') : '-' }}</td>
                        </tr>
                        <tr>
                            <th>Date de Fin :</th>
                            <td>{{ chantier.dateFin ? chantier.dateFin|date('d/m/Y') : '-' }}</td>
                        </tr>
                        <tr>
                            <th>Date de Réception :</th>
                            <td>{{ chantier.dateReception ? chantier.dateReception|date('d/m/Y') : '-' }}</td>
                        </tr>
                        <tr>
                            <th>Distance Dépôt :</th>
                            <td>{{ chantier.distanceDepot ? chantier.distanceDepot ~ ' km' : '-' }}</td>
                        </tr>
                        <tr>
                            <th>Temps de Trajet :</th>
                            <td>{{ chantier.tempsTrajet ? chantier.tempsTrajet ~ ' min' : '-' }}</td>
                        </tr>
                        <tr>
                            <th>Surface Plancher :</th>
                            <td>{{ chantier.surfacePlancher ? chantier.surfacePlancher ~ ' m²' : '-' }}</td>
                        </tr>
                        <tr>
                            <th>Surface Habitable :</th>
                            <td>{{ chantier.surfaceHabitable ? chantier.surfaceHabitable ~ ' m²' : '-' }}</td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header bg-success text-white">
            <h3 class="mb-0"><i class="bi bi-check2-square"></i> Étapes du Chantier</h3>
        </div>
        <div class="card-body">
            {% if etapesParPoste is empty %}
                <p class="text-muted">Aucune étape renseignée pour ce chantier.</p>
            {% else %}
                {% for posteId, groupe in etapesParPoste %}
                    <div class="poste-section mb-4">
                        <h4 class="border-bottom pb-2 mb-3">
                            <i class="bi bi-folder"></i> {{ groupe.poste.libelle }}
                        </h4>

                        <div class="row">
                            {% for chantierEtape in groupe.etapes %}
                                <div class="col-md-6 mb-3">
                                    <div class="etape-item">
                                        <strong>{{ chantierEtape.etape.libelle }} :</strong>
                                        <span class="ms-2">
                                            {% set formatId = chantierEtape.etape.etapeFormat.id %}

                                            {% if formatId == 1 %}
                                                {# Oui, non #}
                                                {% if chantierEtape.valBoolean is not null %}
                                                    <span class="badge bg-{{ chantierEtape.valBoolean ? 'success' : 'danger' }}">
                                                        {{ chantierEtape.valBoolean ? 'Oui' : 'Non' }}
                                                    </span>
                                                {% endif %}
                                            {% elseif formatId == 2 %}
                                                {# Date #}
                                                {{ chantierEtape.valDate ? chantierEtape.valDate|date('d/m/Y') : '-' }}
                                            {% elseif formatId == 3 %}
                                                {# Date et heure #}
                                                {{ chantierEtape.valDateHeure ? chantierEtape.valDateHeure|date('d/m/Y H:i') : '-' }}
                                            {% elseif formatId == 4 %}
                                                {# Texte #}
                                                {{ chantierEtape.valText ?? '-' }}
                                            {% endif %}
                                        </span>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                {% endfor %}
            {% endif %}
        </div>
    </div>

    <div class="mb-4">
        <form method="post" action="{{ path('app_chantier_delete', {'id': chantier.id}) }}"
              onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce chantier ?');">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ chantier.id) }}">
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Supprimer le chantier
            </button>
        </form>
    </div>
</div>

<style>
    .poste-section {
        background-color: #f8f9fa;
        padding: 20px;
        border-radius: 8px;
        border-left: 4px solid #28a745;
    }

    .poste-section h4 {
        color: #28a745;
        font-weight: 600;
    }

    .etape-item {
        padding: 10px;
        background-color: white;
        border-radius: 5px;
        border: 1px solid #dee2e6;
    }

    .card-header h3 {
        font-size: 1.25rem;
    }

    .card-header i {
        margin-right: 8px;
    }
</style>
{% endblock %}
