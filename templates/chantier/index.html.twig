{% extends 'base.html.twig' %}

{% block title %}Chantiers{% endblock %}

{% block body %}
<div class="dashboard">

   
    <div class="top-bar">
        <h1>Chantiers</h1>
        <a href="{{ path('app_chantier_new') }}" class="btn-add">+ Nouveau chantier</a>
    </div>

    
    <details class="current" open>
        <summary>Démarrés <span class="count">{{ chantiers_demarres|length }}</span></summary>

        {% for chantier in chantiers_demarres %}
            <a class="project-item" href="{{ path('app_chantier_show', {'id': chantier.id}) }}">
                <div>
                    <div class="client-name">
                        {{ chantier.client.nom }}
                        <span class="client-city">{{ chantier.ville }}</span>
                    </div>
                    <div class="date-info">
                        Démarré le {{ chantier.dateDemarrage ? chantier.dateDemarrage|date('d/m/Y') : '-' }}
                    </div>
                </div>

                <div class="progress-container">
                    <div class="progress-bg">
                        <div class="progress-fill bg-blue" style="width: 40%"></div>
                    </div>
                    <div class="pct-text">40%</div>
                </div>
            </a>
        {% else %}
            <p style="padding:15px;">Aucun chantier</p>
        {% endfor %}
    </details>

    
    <details class="upcoming">
        <summary>À venir <span class="count">{{ chantiers_avenir|length }}</span></summary>

        {% for chantier in chantiers_avenir %}
            <div class="project-item">
                <div>
                    <div class="client-name">{{ chantier.client.nom }}</div>
                    <div class="date-info">
                        Prévu le {{ chantier.datePrevue|date('d/m/Y') }}
                    </div>
                </div>
            </div>
        {% endfor %}
    </details>

   
    <details class="completed">
        <summary>Terminés <span class="count">{{ chantiers_terminer|length }}</span></summary>

        {% for chantier in chantiers_terminer %}
            <div class="project-item">
                <div>
                    <div class="client-name">{{ chantier.client.nom }}</div>
                    <div class="date-info">
                        Réception le {{ chantier.dateReception|date('d/m/Y') }}
                    </div>
                </div>
            </div>
        {% endfor %}
    </details>

    
    <details class="archived">
        <summary>Archives <span class="count">{{ chantiers_archiver|length }}</span></summary>

        {% for chantier in chantiers_archiver %}
            <div class="project-item">
                <div>
                    <div class="client-name">{{ chantier.client.nom }}</div>
                    <div class="date-info">{{ chantier.ville }}</div>
                </div>
            </div>
        {% endfor %}
    </details>

</div>
{% endblock %}
