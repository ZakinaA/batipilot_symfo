{% extends 'base.html.twig' %}

{% block title %}Modifier le poste{% endblock %}

{% block body %}
<div class="container mt-5">

    <h1 class="mb-4">
        <i class="bi bi-folder"></i> Modifier le poste
    </h1>

    {{ form_start(form) }}

    <div class="poste-section_ClCh">
        <div class="poste-header">
            <h4 class="mb-0">
                <i class="bi bi-gear-fill"></i> Informations du poste
            </h4>
        </div>

        <div class="etapes-grid">

            <div class="etape-field">
                {{ form_label(form.libelle, null, {'label_attr': {'class': 'etape-label'}}) }}
                <div class="etape-input">
                    {{ form_widget(form.libelle, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.libelle) }}
                </div>
            </div>

            
            <div class="etape-field">
                {{ form_label(form.ordre, null, {'label_attr': {'class': 'etape-label'}}) }}
                <div class="etape-input">
                    {{ form_widget(form.ordre, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.ordre) }}
                </div>
            </div>
            

            
            <div class="etape-field">
                {{ form_label(form.archive, null, {'label_attr': {'class': 'etape-label'}}) }}
                <div class="etape-input">
                    {{ form_widget(form.archive) }}
                    {{ form_errors(form.archive) }}
                </div>
            </div>
            
            <div class="etape-field">
                {{ form_label(form.tva, null, {'label_attr': {'class': 'etape-label'}}) }}
                <div class="etape-input">
                    {{ form_widget(form.tva) }}
                    {{ form_errors(form.tva) }}
                </div>
            </div>

        </div>
    </div>

    <div class="d-flex justify-content-between mt-4">
        <a href="{{ path('app_poste_index') }}" class="btn btn-secondary btn-lg">
            <i class="bi bi-arrow-left"></i> Retour
        </a>

        <button type="submit" class="btn btn-warning btn-lg">
            <i class="bi bi-save"></i> Enregistrer
        </button>
    </div>

    {{ form_end(form) }}

    <div class="mt-3">
        {{ include('poste/_delete_form.html.twig') }}
    </div>

</div>
{% endblock %}
