{% extends 'base.html.twig' %}

{% block title %}Poste – {{ poste.libelle }}{% endblock %}

{% block body %}
<div class="container">

    <div class="header-fiche">
        <h1>Poste : {{ poste.libelle }}</h1>

        <div>
            <a href="{{ path('app_poste_edit', {'id': poste.id}) }}" class="btn-back">
                Modifier
            </a>
            <a href="{{ path('app_poste_index') }}" class="btn-back">
                ← Retour
            </a>
        </div>
    </div>

    {% for message in app.flashes('success') %}
        <div class="card" style="border-top-color: var(--success); margin-bottom: 20px;">
            {{ message }}
        </div>
    {% endfor %}

    
    <div class="grid-info">
        <div class="card">
            <h2>Informations du poste</h2>

            <div class="info-row-grid">
                <div class="info-col">
                    <span class="label">Libellé</span>
                    <span class="value">{{ poste.libelle }}</span>
                </div>

                <div class="info-col">
                    <span class="label">Ordre</span>
                    <span class="value">{{ poste.ordre ?? '-' }}</span>
                </div>
            </div>

            <div class="info-row-grid">
                <div class="info-col">
                    <span class="label">TVA</span>
                    <span class="value">
                        {{ poste.tva is not null ? poste.tva ~ ' %' : '-' }}
                    </span>
                </div>

                <div class="info-col">
                    <span class="label">Archivé</span>
                    <span class="value">
                        {% if poste.archive %}
                            <span class="badge badge-danger">Oui</span>
                        {% else %}
                            <span class="badge badge-ok">Non</span>
                        {% endif %}
                    </span>
                </div>
            </div>
        </div>
    </div>

    <div class="header-fiche">
        <h1>Chantier ou ce poste est présent :</h1>
    </div>
    {% for chantierPoste in poste.chantierPostes %}
        {% set chantier = chantierPoste.chantier %}
        {% set client = chantier.client %}

        <div class="grid-info" style="margin-top: 30px;">

           
            <div class="card">
                <h2>Client</h2>

                <div class="info-row-grid">
                    <div class="info-col">
                        <span class="label">Adresse</span>
                        <span class="value">{{ chantier.adresse ?? '-' }}</span>
                    </div>

                    <div class="info-col">
                        <span class="label">Code postal</span>
                        <span class="value">{{ chantier.copos ?? '-' }}</span>
                    </div>
                </div>

                <div class="info-row-grid">
                    <div class="info-col">
                        <span class="label">Ville</span>
                        <span class="value">{{ chantier.ville ?? '-' }}</span>
                    </div>
                </div>
            </div>

           
            <div class="card">
                <h2>Chantier</h2>

                <div class="info-row-grid">
                    <div class="info-col">
                        <span class="label">Date prévue</span>
                        <span class="value">
                            {{ chantier.datePrevue ? chantier.datePrevue|date('d/m/Y') : '-' }}
                        </span>
                    </div>

                    <div class="info-col">
                        <span class="label">Date démarrage</span>
                        <span class="value">
                            {{ chantier.dateDemarrage ? chantier.dateDemarrage|date('d/m/Y') : '-' }}
                        </span>
                    </div>
                </div>

                <div class="info-row-grid">
                    <div class="info-col">
                        <span class="label">Date de fin</span>
                        <span class="value">
                            {{ chantier.dateFin ? chantier.dateFin|date('d/m/Y') : '-' }}
                        </span>
                    </div>

                    <div class="info-col">
                        <span class="label">Date réception</span>
                        <span class="value">
                            {{ chantier.dateReception ? chantier.dateReception|date('d/m/Y') : '-' }}
                        </span>
                    </div>
                </div>

                <div class="info-row-grid">
                    <div class="info-col">
                        <span class="label">Surface plancher</span>
                        <span class="value">
                            {{ chantier.surfacePlancher ? chantier.surfacePlancher ~ ' m²' : '-' }}
                        </span>
                    </div>

                    <div class="info-col">
                        <span class="label">Surface Habitable</span>
                        <span class="value">
                            {{ chantier.surfaceHabitable ? chantier.surfaceHabitable ~ ' m²' : '-' }}
                        </span>
                    </div>
                </div>

                <div class="info-row-grid">
                    <div class="info-col">
                        <span class="label">Temps de trajet</span>
                        <span class="value">
                            {{ chantier.tempsTrajet ? chantier.tempsTrajet ~ ' min' : '-' }}
                        </span>
                    </div>

                    <div class="info-col">
                        <span class="label">Distance dépôt</span>
                        <span class="value">
                            {{ chantier.distanceDepot ? chantier.distanceDepot ~ ' km' : '-' }}
                        </span>
                    </div>
                </div>
            </div>

        </div>
    {% else %}
        <div class="card" style="margin-top: 30px;">
            Aucun chantier associé à ce poste.
        </div>
    {% endfor %}

    
    <form method="post"
          action="{{ path('app_poste_delete', {'id': poste.id}) }}"
          onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce poste ?');"
          style="margin-top: 30px;">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ poste.id) }}">
        <button class="btn-back" style="border-color: var(--danger); color: var(--danger);">
            Supprimer le poste
        </button>
    </form>

</div>
{% endblock %}
